.row
  %table{class: "table table-striped"}
    %thead
      %tr
        %th Title
        %th Forum
        %th Replies
        %th Last Post By

    %tbody
      - submissions.each do |submission|
        %tr
          %td
            - if submission.private?
              %i.fa.fa-eye
            - if @views && @views.find { |v| v.submission_id == submission.id }.present?
              = link_to submission, unread_submission_path(submission)
            - else
              %strong
                = link_to submission, unread_submission_path(submission)
            %br
            Started by
            = link_to submission.posts.first.author, submission.posts.first.author
          %td= link_to submission.forum, submission.forum
          %td= submission.posts_count - 1
          %td
            = link_to submission.posts.last.author, submission.posts.last.author
            %br
            = l submission.posts.last.created_at
