.page-header
  %h1 Avatar

.col-sm-10
  = form_for current_user, { html: { class: "form-horizontal" } } do |f|
    .row.form-group
      = f.label :avatar_url, "Avatar URL", class: "col-sm-4 control-label"
      .col-sm-8
        = f.text_field :avatar_url, class: "form-control"
        %p.help-block
          Please use an HTTPS URL, from imgur
          %br
          Example: https://i.imgur.com/foo.png
    .row.text-right
      %button.btn.btn-primary Submit
