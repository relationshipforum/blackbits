.page-header
  %h1 Avatar

.col-sm-10
  = form_for current_user, { html: { class: "form-horizontal" } } do |f|
    .row.form-group
      = f.label :avatar, "Select File", class: "col-sm-4 control-label"
      .col-sm-8
        = f.file_field :avatar, class: "form-control"
    .row.text-right
      %button.btn.btn-primary Submit
