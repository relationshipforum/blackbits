.page-header
  %h1 Settings

.col-sm-6
  = form_for current_user, { html: { class: "form-horizontal" } } do |f|
    .panel
      .panel-heading
        %span.panel-title Change Password
      .panel-body
        .row.form-group
          = f.label :password, class: "col-sm-4 control-label"
          .col-sm-8
            = f.password_field :password, class: "form-control"
        .row.form-group
          = f.label :password_confirmation, "Confirm", class: "col-sm-4 control-label"
          .col-sm-8
            = f.password_field :password_confirmation, class: "form-control"
      .panel-footer.text-right
        %button.btn.btn-primary Submit

  = form_for current_user, { html: { class: "form-horizontal" } } do |f|
    .panel
      .panel-heading
        %span.panel-title Default Home Page
      .panel-body
        .checkbox
          %label
            = f.check_box :whats_new_default, class: "px"
            %span.lbl
              What's New as Default Page
        .checkbox
          %label
            = f.check_box :conversation_notification, class: "px"
            %span.lbl
              Email me on new conversation
      .panel-footer.text-right
        %button.btn.btn-primary Submit
