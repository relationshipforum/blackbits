- content_for(:body_class, "page-signup-alt")
.signup-header
  %a.logo{:href => root_path}
  .demo-logo{style: "background: none;"}
    %img{:alt => "", :src => asset_path("logo.png"), :style => "margin-top: -4px;"}
  %a.btn.btn-primary{:href => new_user_session_path} Sign In
%h1.form-header Create Your Account
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "signup-form_id", class: "panel" }) do |f|
  = devise_error_messages!

  .form-group
    = f.text_field :username, placeholder: "Username", class: "form-control input-lg", autofocus: true
  .form-group
    = f.text_field :email, placeholder: "Email", class: "form-control input-lg"
    %p.help-block
      Please use a valid email. This is only used for account recovery purposes. We will never email you. Promise!
  .form-group
    = f.password_field :password, placeholder: "Password", class: "form-control input-lg"
  .form-group
    = f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control input-lg"
  %hr
  .form-group
    = f.country_select :country, { priority: %w(US CA EU), prompt: "Select a Country" }, { class: "form-control" }
  .form-group
    = f.time_zone_select :time_zone, nil, {}, class: "form-control"
  .form-group
    .radio
      %label
        = f.radio_button :gender, true, class: "px"
        %span{class: "lbl"} Male
    .radio
      %label
        = f.radio_button :gender, false, class: "px"
        %span{class: "lbl"} Female
  .form-actions
    %input.btn.btn-primary.btn-block.btn-lg{:type => "submit", :value => "Sign In"}
